    "/user/{user}": {
      "get": {
        "description": "(Riwayat peminjaman) Mengambil data riwayat pinjaman",
        "tags": ["User"],
        "parameters": [
          {
            "name": "user",
            "description": "masukkan nama user",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "field status mempresentasikan 0/false belom di kembalikan dan 1/true sudah di kembalikan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "nama": {
                            "type": "string"
                          }
                        }
                      },
                      "example": [
                        {
                          "userId": 1,
                          "bukuId": 1,
                          "status": 0
                        },
                        {
                          "userId": 1,
                          "bukuId": 2,
                          "status": 1
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found. User tidak pernah meminjam apapun",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Not Found History"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },


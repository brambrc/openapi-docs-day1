        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "example": {
                        "id": 1,
                        "nama_buku": "kelinci kecil",
                        "penerbit": "susilo",
                        "tanggal_release": "12-12-2011",

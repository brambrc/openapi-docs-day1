              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "nama": {
                            "type": "string"
                          }
                        }
                      },
                      "example": [
                        {
                          "id": 1,
                          "nama": "ridho"
                        },
                        {
                          "id": 2,
                          "nama_": "aris"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",

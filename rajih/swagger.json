                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Please Login First"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "(Pengembalian buku) Mengembalikan buku yang telah di pinjam oleh user berdasarkan kode buku / id buku, jika sudah selesai di pinjam maka akan mengganti status dari awalnya 1/true menjadi false/0 yang berarti sedang tidak di pinjam",
        "tags": ["Buku"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "nama": {
                            "type": "string"
                          },
                          "nama_buku": {
                            "type": "string"
                          },
                          "penerbit": {
                            "type": "string"
                          },
                          "tanggal_release": {
                            "type": "string"
                          },
                          "status": {
                            "type": "integer"
                          }
                        },
                        "example": [
                          {
                            "id": 1,
                            "nama_buku": "kelinci kecil",
                            "penerbit": "susilo",
                            "tanggal_release": "12-12-2011",
                            "status": 0
                          }
                        ]
                      }
                    },
                    "msg": {
                      "type": "string",
                      "example": "success"
                    }

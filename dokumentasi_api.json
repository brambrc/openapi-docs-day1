{
    "openapi": "3.0.3",
    "info": {
        "title": "API edukasi",
        "description": "API sederhana tentang edukasi", 
        "version": "1",
        "contact": {
            "name": "Hasbullahul Mukaromah",
            "email": "hasbulokey91@gmail.com",
            "url": "https://hasbullahulMukaromah.id"
        },
        "license": {
            "name": "APACHE 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0"
        }
    },
    "servers": {
     "url": "http://localhost:3000/v1"
    },
    "paths": {
        "/courses": {
          "get": {
            "summary": "Mendapatkan daftar mata kuliah",
            "responses": {
              "200": {
                "description": "OK",
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Course"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "/courses/{courseId}": {
          "get": {
            "summary": "Mendapatkan detail mata kuliah",
            "parameters": [
              {
                "in": "path",
                "name": "courseId",
                "required": true,
                "description": "ID mata kuliah yang akan diambil detailnya",
                "schema": {
                  "type": "integer"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "OK",
                "content": {
                  "application/json": {
                    "schema": {
                      "$ref": "#/components/schemas/Course"
                    }
                  }
                }
              }
            }
          }
        },
        "/enrollments": {
          "post": {
            "summary": "Mendaftarkan mata kuliah",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/EnrollmentRequest"
                  }
                }
              }
            },
            "responses": {
              "201": {
                "description": "Created"
              }
            }
          }
        },
        "/courses/{courseId}/participants": {
          "get": {
            "summary": "Mendapatkan daftar peserta didik pada mata kuliah",
            "parameters": [
              {
                "in": "path",
                "name": "courseId",
                "required": true,
                "description": "ID mata kuliah yang ingin dilihat peserta didiknya",
                "schema": {
                  "type": "integer"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/courses/{courseId}/grades": {
          "get": {
            "summary": "Mendapatkan nilai peserta didik pada mata kuliah",
            "parameters": [
              {
                "in": "path",
                "name": "courseId",
                "required": true,
                "description": "ID mata kuliah yang ingin dilihat nilai peserta didiknya",
                "schema": {
                  "type": "integer"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/courses/{courseId}/announcements": {
          "get": {
            "summary": "Mendapatkan pengumuman kelas",
            "parameters": [
              {
                "in": "path",
                "name": "courseId",
                "required": true,
                "description": "ID mata kuliah yang ingin dilihat pengumumannya",
                "schema": {
                  "type": "integer"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/courses/{courseId}/schedule": {
          "get": {
            "summary": "Mendapatkan jadwal pelajaran mata kuliah",
            "parameters": [
              {
                "in": "path",
                "name": "courseId",
                "required": true,
                "description": "ID mata kuliah yang ingin dilihat jadwal pelajarannya",
                "schema": {
                  "type": "integer"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        },
        "/courses/{courseId}/materials": {
          "get": {
            "summary": "Mendapatkan materi pelajaran pada mata kuliah",
            "parameters": [
              {
                "in": "path",
                "name": "courseId",
                "required": true,
                "description": "ID mata kuliah yang ingin dilihat materinya",
                "schema": {
                  "type": "integer"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "OK"
              }
            }
          }
        }
      },
      "components": {
        "schemas": {
          "Course": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "instructor": {
                "type": "string"
              }
            }
          },
          "EnrollmentRequest": {
            "type": "object",
            "properties": {
              "course_id": {
                "type": "integer"
              },
              "student_id": {
                "type": "integer"
              }
            }
          }
        }
      }
    }